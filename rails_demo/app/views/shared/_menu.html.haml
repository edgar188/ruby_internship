%nav.navbar.navbar-expand-md.navbar-dark.bg-dark{style: 'padding: 10px 90px '}
  .container-fluid
    .navbar-collapse
      %ul.navbar-nav.me-auto
        %li.nav-item
          = link_to 'Home', root_path, class: 'nav-link active' 
        - if user_signed_in?
          %li.nav-item
            = link_to 'Users', users_path, class: 'nav-link active'
          %li.nav-item
          = link_to 'Categories', categories_path, class: 'nav-link active'
          %li.nav-item
          = link_to 'Items', items_path, class: 'nav-link active'
    .navbar-collapse
      %ul.navbar-nav.ms-auto
        -if user_signed_in? 
          %li.nav-item
            = button_to carts_path, method: :get, class: 'btn btn-outline-light' do
              %i.bi-cart-fill.me-1
              Cart
              %span#items_counter.badge.bg-dark.text-white.ms-1.rounded-pill 0

        %li.nav-item.dropdown.align-baseline.align-right
          -if user_signed_in? 
            %a.nav-link.dropdown-toggle.active{'aria-expanded': 'false', 'data-bs-toggle': 'dropdown', href: '#', role: 'button'}= current_user.show_full_name
          - else
            %a.nav-link.dropdown-toggle.active{'aria-expanded': 'false', 'data-bs-toggle': 'dropdown', href: '#', role: 'button'} Login
          %ul.dropdown-menu
            -if user_signed_in? 
              = link_to profile_page_path, class: 'dropdown-item' do
                Account
                %i.bi-person-circle.ml-8
              %hr.dropdown-divider/
              = button_to destroy_user_session_path, class: 'dropdown-item', method: :delete do
                Log out
                %i.bi-box-arrow-right.ml-8
            -else
              = link_to new_user_session_path, class: 'dropdown-item' do
                Sign in    
                %i.bi-box-arrow-in-right.ml-8
              %hr.dropdown-divider/
              = link_to new_user_registration_path, class: 'dropdown-item' do
                Sign up    
                %i.bi-person-plus-fill.ml-8

= javascript_include_tag 'cart/add_to_cart'