-if user_signed_in?
  .container.bootstrap.snippets.bootdey
    = link_to 'Edit', edit_profile_page_path, class: 'btn btn-secondary'   
    = link_to 'Edit password', edit_user_registration_path, class: 'btn btn-secondary'
    %br/
    %br/
    .panel-body.inf-content
      .row
        .col-md-4
          %img.img-circle.img-thumbnail.isTooltip{:alt => 'Avatar', 'data-original-title' => 'Usuario', :src => 'https://bootdey.com/img/Content/avatar/avatar7.png', :style => 'width:400px;', :title => ''}/
        .col-md-6
          .table-responsive
            %table.table.table-user-information
              %tbody
                %tr
                  %td
                    %strong
                      %span.glyphicon.glyphicon-asterisk.text-primary
                      ID
                  %td.text-primary
                    = current_user.id
                %tr
                  %td
                    %strong
                      %span.glyphicon.glyphicon-user.text-primary
                      Role
                  %td.text-primary
                    = current_user.role
                %tr
                  %td
                    %strong
                      %span.glyphicon.glyphicon-cloud.text-primary
                      Name
                  %td.text-primary
                    = current_user.first_name
                %tr
                  %td
                    %strong
                      %span.glyphicon.glyphicon-eye-open.text-primary
                      Last name
                  %td.text-primary
                    = current_user.last_name
                %tr
                  %td
                    %strong
                      %span.glyphicon.glyphicon-envelope.text-primary
                      Email
                  %td.text-primary
                    = current_user.email
                %tr
                  %td
                    %strong
                      %span.glyphicon.glyphicon-envelope.text-primary
                      Gender
                  %td.text-primary
                    = current_user.gender
                %tr
                  %td
                    %strong
                      %span.glyphicon.glyphicon-envelope.text-primary
                      Birth date
                  %td.text-primary
                    = current_user.birth_date
                %tr
                  %td
                    %strong
                      %span.glyphicon.glyphicon-envelope.text-primary
                      Country
                  %td.text-primary
                    = current_user.country
                %tr
                  %td
                    %strong
                      %span.glyphicon.glyphicon-envelope.text-primary
                      Phone
                  %td.text-primary
                    = current_user.phone
                %tr
                  %td
                    %strong
                      %span.glyphicon.glyphicon-calendar.text-primary
                      created
                  %td.text-primary
                    = current_user.created_at.to_date
                %tr
                  %td
                    %strong
                      %span.glyphicon.glyphicon-calendar.text-primary
                      Modified
                  %td.text-primary
                    = current_user.updated_at.to_date
-else
  %h3= 'You are not signed in'
