.py-2.px-4.border-bottom.d-none.d-lg-block
  .d-flex.justify-content-between.py-1
    %strong.mr-2.h5= "#{@conversation.name} / #{@conversation.chat_type}"
    - if @conversation.room?
      .dropdown.align-baseline
        .dropdown-toggle.active.h5{'aria-expanded': 'false', 'data-bs-toggle': 'dropdown', role: 'button'} Members
        %ul.dropdown-menu
          - @conversation.conversation_users.each do |member|
            - unless member.user == current_user
              %p= member.full_name
              %hr/
          %b= "Creator #{@conversation.show_creator_name}"
      - if @conversation.creator['id'] == current_user.id
        = form_tag add_member_conversation_users_path, multipart: true, class: 'form-inline' do
          = hidden_field_tag :conversation_id, @conversation.id
          .dropdown.align-baseline
            .dropdown-toggle.active.h5{'aria-expanded': 'false', 'data-bs-toggle': 'dropdown', role: 'button'} Friends
            %ul.dropdown-menu
              - current_user.friends.each do |friend|
                - unless @conversation.member?(friend)
                  %li
                    %input{name: 'user_id[]', type: 'checkbox', value: friend.id}>/
                    = " #{friend.show_full_name}"
              = submit_tag 'Add member(s)', class: 'btn btn-outline-success'