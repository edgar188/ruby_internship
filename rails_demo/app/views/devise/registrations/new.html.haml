%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :role
    %br/
    = f.radio_button :role, 1 
    = f.label :role, "seller" 
    = f.radio_button :role, 2 
    = f.label :role, "seller" 
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name, autofocus: true, autocomplete: "first_name"
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name, autofocus: true, autocomplete: "last_name"
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :gender
    %br/
    = f.radio_button :gender, 1 
    = f.label :gender, "male" 
    = f.radio_button :gender, 2 
    = f.label :gender, "female" 
  .field
    = f.label :birth_date
    %br/
    = f.date_field :birth_date, autofocus: true, autocomplete: "birth_date"
  
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Sign up", class: 'btn btn-info'
= render "devise/shared/links"