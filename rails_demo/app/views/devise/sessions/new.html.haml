%h2 Log in
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-group.row
    %label.col-sm-2.col-form-label Email
    .col-sm-10
      = f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control'
  .form-group.row
    %label.col-sm-2.col-form-label Current password
    .col-sm-10
      = f.password_field :password, autofocus: true, autocomplete: "current-password", class: 'form-control'
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :remember_me
  %br/
  %br/
  .actions
    = f.submit "Log in", class: 'btn btn-primary'
