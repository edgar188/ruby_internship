.container
  .d-flex.justify-content-between
    -if current_user.role == 'seller'
      = link_to 'New Item', new_item_path, class: 'btn btn-secondary mb-2' 
    %span#items_count.h3.mt-2= "Total  #{@items[:count]} items"
    .d-flex.justify-content-end.mb-2
      = form_with(url: items_path, method: 'GET', class: 'd-flex') do |form|
        = form.text_field(:query, placeholder: 'Search...', class: 'form-control rounded', id: 'items_search')
      = link_to 'Reset', items_path, class: 'btn btn-outline-warning'
  %hr
  .d-flex.mb-2.mt-2.mr-2
    = form_tag '', method: :get do
      .d-flex.flex-column.mb-2
        %label
          %input{name: 'owner', type: 'checkbox', value: current_user.id}
          %span.h6 My items
      %br
      %h6 Price range
      = number_field_tag :min_price, @current_value, class: 'number mb-2 form-control rounded', placeholder: 'Select min price'
      = number_field_tag :max_price, @current_value, class: 'number mb-2 form-control rounded', placeholder: 'Select max price'
      = submit_tag 'Filter',  class: 'btn btn-secondary'
      = link_to 'Reset', items_path, class: 'btn btn-outline-warning'
    = render 'items/shared/items_list'
  = will_paginate @items[:result], renderer: BootstrapPagination::Rails

= javascript_include_tag 'helpers/axios_handler'
= javascript_include_tag 'items/search'