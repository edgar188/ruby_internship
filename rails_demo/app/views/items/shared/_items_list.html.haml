%table#items_table.table.table-striped.ml-8
  %thead
    %tr
      %th= sortable 'title', 'Title'
      %th= sortable 'price', 'Price'
      %th= sortable 'countity', 'Count'
      %th= sortable 'updated_at', 'Date modified'
  %tbody#items_table_body
    - @items[:result].each do |item|
      %tr.link{'data-item_owner': item.show_owner_full_name}
        %td= link_to "#{item.show_title}", "#{items_path}/#{item.id}"
        %td= "$ #{item.price}"
        %td= item.countity
        %td= item.show_modified_date