.bootstrap.snippets.bootdey
  .d-flex
  .panel-body.inf-content
    .row
      .col-md-4
        = image_tag('shop.jpg', class: 'img img-circle img-thumbnail isTooltip', style: 'width: 400px')
      .col-md-6
        .table-responsive
          %table.table.table-user-information
            %tbody
              %tr
              %td
                %strong
                  %span.glyphicon.glyphicon-user.text-primary
                  Title
              %td.text-primary
                = @item.show_title
              %tr
                %td
                  %strong
                    %span.glyphicon.glyphicon-cloud.text-primary
                    Category 
                %td.text-primary
                  = @item.show_category
              %tr
                %td
                  %strong
                    %span.glyphicon.glyphicon-envelope.text-primary
                    Owner
                %td.text-primary
                  = @item.show_owner_full_name
              %tr
                %td
                  %strong
                    %span.glyphicon.glyphicon-envelope.text-primary
                    Description
                %td.text-primary
                  = @item.description
              %tr
                %td
                  %strong
                    %span.glyphicon.glyphicon-envelope.text-primary
                    Price
                %td.text-primary
                  = @item.price 
                  %b $                       
              %tr
                %td
                  %strong
                    %span.glyphicon.glyphicon-envelope.text-primary
                    Count
                %td.text-primary
                  = @item.countity              
              %tr
                %td
                  %strong
                    %span.glyphicon.glyphicon-envelope.text-primary
                    Ratting
                %td.text-primary
                  = @item.ratting              
              %tr
                %td
                  %strong
                    %span.glyphicon.glyphicon-envelope.text-primary
                    State
                %td.text-primary
                  = @item.show_state  
