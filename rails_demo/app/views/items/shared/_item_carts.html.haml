.col-md-9.mx-auto
  .row.product-list
    - @items[:result].each do |item|
      .col-md-4
        %section.panel.border.mb-2.rounded
          .pro-img-box
            - if item.images.attached?
              = image_tag(item.images.first, class: 'img img-circle img-thumbnail isTooltip', style: 'width: 150px; height: 150px;')
            - else 
              = image_tag('shop.jpg', class: 'img img-circle img-thumbnail isTooltip', style: 'width: 400px')
          .panel-body.text-center
            %h5.ellipsis= link_to "#{item.title}", "#{items_path}/#{item.id}"
            %p.ellipsis= "$ #{item.price}"
            %i.bi-eye-fill= item.views
            - if user_signed_in?
              = form_for @user_item do |f|
                = f.hidden_field :user_id, value: current_user.id
                = f.hidden_field :item_id, value: item.id
                = button_tag(type: 'submit', class: 'btn btn-outline-dark') do
                  %i.bi-bag-plus-fill