.col-md-9.mx-auto
  .row.product-list
    - @items[:result].each do |item|
      .col-md-4
        %section.panel.border.mb-2.rounded
          .pro-img-box
            - if item.images.attached?
              = image_tag(item.images.first, class: 'img img-circle img-thumbnail isTooltip', style: 'width: 150px; height: 150px;')
            - else 
              = image_tag('shop.jpg', class: 'img img-circle img-thumbnail isTooltip', style: 'width: 400px')
          .panel-body.text-center
            %h5.ellipsis= link_to "#{item.show_title}", "#{items_path}/#{item.id}"
            %p.ellipsis= "$ #{item.price}"
            %button.add_to_cart_btn.btn.btn-default.btn-sm.border.mb-2{type: 'button'}
              %i.h5.bi-cart-plus-fill
              %b Add to Cart

= javascript_include_tag 'cart/add_to_cart'