<h1>Articles list</h1>
<ul>
  <% @articles.each do |article| %>
    <li>
      <b>Title: </b>
      <span><%= article.title %></span>
      <br />
      <b>Body: </b>
      <span><%= article.body %></span>
      <br />
      <b>Create date: </b>
      <span><%= article.created_at.to_date %></span>
      <br /><br />
       <ul>
          <% article.article_arts.each do |article_art| %>
            <li>
              <b>Name: </b>
              <span><%= article_art.name %></span>
              <br />
              </li>
          <% end %>
        </ul>
        <br /><br /><hr />
    </li>
  <% end %>
</ul>
