.container.bg-info
  %h2
    Edit Article  #{@article.id}
  = form_with model: @article do |form|
    %div
      %span= form.label :title
      %span= form.text_field :title
    %div
      %h5= form.label :body, 'Article text'
      %span= form.text_area :body
    %h3 Article arts
    = form.fields_for :article_arts do |art_form| 
      %div
        %span= art_form.label :name
        %span= art_form.text_field :name
      %div
        %span= art_form.label :likes
        %span= art_form.text_field :likes
      .container-sm{style: "background: #e2f4cc; margin-top: 5px"} Comments
      = art_form.fields_for :article_art_comments do |comment_form|
        %div{style: "background: #e2f4cc;"}
          %span= comment_form.label :body
          %span= comment_form.text_field :body

