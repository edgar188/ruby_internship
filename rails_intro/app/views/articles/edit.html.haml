.container
  %h2.title-lg
    Article editting #{@article.id}
  = form_with model: @article do |form|
    %p.mt= form.label :title
    %p= form.text_field :title, class: 'form-text-field'
    %p= form.label :body, 'Article text'
    %p= form.text_area :body, rows: 5, class: 'form-text-area'
    %p.mt
      = form.submit 'Save', class: 'button button-main'
