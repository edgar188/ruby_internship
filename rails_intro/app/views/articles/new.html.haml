.container
  %h2.title-lg New article
  = form_with model: @article do |form|
    -# %p.mt= form.label :title
    %p.mt= form.text_field :title, class: 'form-text-field', placeholder: 'title'
    %div
      -# = form.label :body
      %br/
      = form.text_area :body, placeholder: 'Article text'
      %br/
      - @article.errors.full_messages_for(:body).each do |message|
        %div= message
        %hr/

    -## CREATE NEW ARTICLE ART
    %hr.mt 
    %h2.title-lg.mt New article art
    .align-center
      = button_tag(type: 'submit', id: 'button_plus') do
        = content_tag(:i, nil, class: 'fa fa-plus')

    -## ADD NEW FIELDS FOR ARTICLE ART
    #article_arts


    %p.mt.align-center
      = form.submit class: 'button button-main'
